<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/loginInfo_rl">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/username_iv"
            android:src="@mipmap/username"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/username_iv"
            android:background="@null"
            android:id="@+id/username_et"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:background="@color/textColor"
            android:layout_below="@id/username_et"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/password"
            android:id="@+id/password_iv"
            android:layout_above="@+id/textView"
            android:layout_toStartOf="@+id/username_et" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_below="@id/username_et"
            android:layout_toRightOf="@id/password_iv"
            android:background="@null"
            android:id="@+id/password_et"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:background="@color/textColor"
            android:layout_below="@id/password_et"
            android:id="@+id/textView" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginInfo_rl"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:text="登录"
        android:id="@+id/login_bt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_alignBottom="@+id/login_bt"
        android:layout_toEndOf="@+id/login_bt"
        android:layout_marginStart="30dp"
        android:id="@+id/register_tv"/>
</RelativeLayout>